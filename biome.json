{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": ["node_modules", ".next"]
    },
    "formatter": {
        "enabled": true,
        "useEditorconfig": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf"
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": false,
        "rules": {
            "nursery": {
                "useSortedClasses": {
                    "level": "error",
                    "fix": "unsafe",
                    "options": {
                        "attributes": ["className"],
                        "functions": ["cn"]
                    }
                }
            }
        }
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "quoteStyle": "single",
            "jsxQuoteStyle": "single",
            "trailingCommas": "all"
        }
    },
    "organizeImports": {
        "enabled": true
    }
}
